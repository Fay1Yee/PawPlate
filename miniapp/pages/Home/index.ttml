        </navigator>
        <navigator url="/pages/recipe/detail?id=6" class="recipe-card">
          <image class="recipe-card-image" src="http://localhost:3000/images/ai-generated/recipes/Tuna_surprise_with_s_3a6b0b37_1755164345457.png" mode="aspectFill"></image>
          <view class="recipe-card-content">
            <text class="recipe-card-title">Tuna Surprise</text>
