.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.pet-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.pet-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.pet-details {
  flex: 1;
  margin: 0 30rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.pet-breed, .pet-age {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.edit-btn {
  background-color: #ff6b35;
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.features {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.feature-card {
  width: 32%;
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.feature-card image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.feature-card text {
  font-size: 28rpx;
  color: #333;
}

.daily-tip {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}