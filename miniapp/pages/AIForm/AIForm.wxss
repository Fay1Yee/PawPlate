.form-header {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 标题包装器样式 */
.header-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-bottom: 8px;
}

.header-title {
  font-size: 36rpx;
  font-weight: 400;
  font-family: var(--font-cartoon-primary);
  margin: 0;
}

.header-subtitle {
  font-size: 28rpx;
  font-family: var(--font-cartoon-body);
  color: #666;
}

.form-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

/* 表单标签包装器样式 */
.form-label-wrapper {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-family: var(--font-cartoon-body);
  margin-bottom: 10rpx;
  font-weight: 400;
}

.form-input, .picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-family: var(--font-cartoon-body);
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-family: var(--font-cartoon-body);
  box-sizing: border-box;
}

.picker {
  display: flex;
  align-items: center;
}