.recipe-header {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.recipe-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.recipe-title {
  font-size: 48rpx;
  line-height: 60rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.recipe-subtitle {
  font-size: 32rpx;
  line-height: 40rpx;
  color: var(--color-text-secondary);
  font-style: italic;
  margin-bottom: 16rpx;
}

.recipe-description {
  font-size: 28rpx;
  line-height: 40rpx;
  color: var(--color-text-secondary);
  margin-bottom: 20rpx;
}

.recipe-info {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 32rpx;
  line-height: 48rpx;
  color: var(--color-text-secondary);
  flex: 1;
}

.info-value {
  font-size: 32rpx;
  line-height: 48rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-left: auto;
}

.ingredients-section, .steps-section, .cautions-section {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 节标题样式 */
.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.section-title {
  font-size: 40rpx;
  line-height: 52rpx;
  font-weight: 700;
  color: var(--color-text);
  margin: 0;
}

/* 注意事项样式 */
.cautions-section {
  background: linear-gradient(135deg, #FFF9EB 0%, #FFF4E6 100%);
  border-left: 8rpx solid #F6C642;
}

.caution-content {
  padding: 16rpx 20rpx;
  background: rgba(246, 198, 66, 0.1);
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.caution-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: var(--color-text);
  font-weight: 500;
}

.actions-section {
  padding: 20rpx 0;
}