<view class="page-container">
  <view class="result-header">
    <text class="header-title">为您推荐</text>
    <text class="header-subtitle">根据您宠物的信息，我们为您精心挑选了以下食谱</text>
  </view>
  
  <view class="pet-info">
    <view class="info-item">
      <text class="info-label">宠物类型:</text>
      <text class="info-value">{{petProfile.type}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">宠物品种:</text>
      <text class="info-value">{{petProfile.breed}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">年龄:</text>
      <text class="info-value">{{petProfile.age}}个月</text>
    </view>
    <view class="info-item">
      <text class="info-label">体重:</text>
      <text class="info-value">{{petProfile.weight}}kg</text>
    </view>
  </view>
  
  <view class="recommendations">
    <view class="section-title">推荐食谱</view>
    <block wx:for="{{recommendations}}" wx:key="id">
      <view class="recipe-card" bindtap="goToRecipeDetail" data-id="{{item.id}}">
        <image class="recipe-image" src="{{item.image}}" mode="aspectFill"></image>
        <view class="recipe-info">
          <text class="recipe-name">{{item.name}}</text>
          <text class="recipe-description">{{item.description}}</text>
          <view class="recipe-meta">
            <text class="meta-item">⏱ {{item.cookTime}}分钟</text>
            <text class="meta-item">⭐ {{item.difficulty}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>
  
  <view class="actions">
    <button class="custom-button secondary-button" bindtap="recreateRecommendations">重新生成</button>
  </view>
</view>