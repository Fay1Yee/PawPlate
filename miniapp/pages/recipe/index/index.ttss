/* pages/recipe/index/index.ttss - 卡通毛玻璃风格详情页 */

.container {
  padding: var(--page-padding);
  min-height: 100vh;
  position: relative;
}

/* 主要内容卡片 */
.recipe-card {
  background: rgba(255, 246, 227, 0.9);
  backdrop-filter: blur(24rpx);
  border-radius: var(--card-radius);
  border: 2rpx solid rgba(246, 198, 66, 0.3);
  padding: calc(var(--grid-base) * 3);
  box-shadow: 
    0 24rpx 80rpx rgba(74, 59, 32, 0.1),
    0 8rpx 32rpx rgba(246, 198, 66, 0.15),
    inset 0 2rpx 8rpx rgba(255, 255, 255, 0.8),
    inset 0 -2rpx 4rpx rgba(246, 198, 66, 0.1);
  position: relative;
  overflow: hidden;
  margin-bottom: calc(var(--grid-base) * 2);
}

.recipe-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, 
    var(--carrot-orange) 0%, 
    var(--primary-yellow) 25%, 
    var(--leaf-green) 50%, 
    var(--primary-yellow) 75%, 
    var(--carrot-orange) 100%);
}

/* 菜谱标题 */
.title {
  font-size: calc(var(--font-title) + 4rpx);
  font-weight: 800;
  color: var(--shadow-umber);
  display: block;
  margin-bottom: calc(var(--grid-base) * 1.5);
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(246, 198, 66, 0.2);
  position: relative;
}

.title::before {
  content: '🍽️';
  font-size: calc(var(--font-title) - 4rpx);
  margin-right: 16rpx;
  opacity: 0.9;
}

/* 菜谱描述 */
.description {
  font-size: var(--font-body);
  color: rgba(74, 59, 32, 0.8);
  line-height: 1.6;
  margin-bottom: calc(var(--grid-base) * 2);
  padding: calc(var(--grid-base) * 1.5);
  background: rgba(255, 255, 255, 0.4);
  border-radius: calc(var(--card-radius) * 0.5);
  border: 1rpx solid rgba(246, 198, 66, 0.2);
  position: relative;
}

.description::before {
  content: '';
  position: absolute;
  left: calc(var(--grid-base) * 1.5);
  top: 0;
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, var(--carrot-orange), var(--leaf-green));
  border-radius: 2rpx;
}

/* 操作按钮区域 */
.actions {
  display: flex;
  gap: calc(var(--grid-base) * 1.5);
  margin-top: calc(var(--grid-base) * 3);
  flex-wrap: wrap;
}

/* 按钮基础样式 */
.ai-button, .buy-button, .favorite-button {
  flex: 1;
  min-width: 200rpx;
  padding: calc(var(--grid-base) * 1.5) calc(var(--grid-base) * 2);
  border-radius: var(--button-radius);
  font-size: var(--font-button);
  font-weight: 600;
  text-align: center;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

/* AI Customize button */
.ai-button {
  background: linear-gradient(135deg, var(--leaf-green) 0%, #2EAA5A 100%);
  color: white;
  box-shadow: 
    0 8rpx 24rpx rgba(53, 194, 107, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.ai-button::before {
  content: '🤖';
  margin-right: 8rpx;
}

/* Buy button */
.buy-button {
  background: linear-gradient(135deg, var(--carrot-orange) 0%, #E67A2E 100%);
  color: white;
  box-shadow: 
    0 8rpx 24rpx rgba(255, 138, 61, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.buy-button::before {
  content: '🛒';
  margin-right: 8rpx;
}

/* Favorite button */
.favorite-button {
  background: linear-gradient(135deg, var(--primary-yellow) 0%, var(--deep-amber) 100%);
  color: var(--shadow-umber);
  box-shadow: 
    0 8rpx 24rpx rgba(246, 198, 66, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.4);
}

.favorite-button::before {
  content: '❤️';
  margin-right: 8rpx;
}

/* 按钮悬停效果 */
.ai-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 12rpx rgba(53, 194, 107, 0.4),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
}

.buy-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 12rpx rgba(255, 138, 61, 0.4),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
}

.favorite-button:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 
    0 4rpx 12rpx rgba(246, 198, 66, 0.4),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

/* 装饰元素 */
.recipe-card::after {
  content: '';
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  background: radial-gradient(circle, var(--carrot-orange) 20%, transparent 70%);
  border-radius: 50%;
  opacity: 0.5;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { 
    transform: scale(1); 
    opacity: 0.5; 
  }
  50% { 
    transform: scale(1.2); 
    opacity: 0.8; 
  }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .actions {
    flex-direction: column;
  }
  
  .ai-button, .buy-button, .favorite-button {
    flex: none;
    width: 100%;
  }
}