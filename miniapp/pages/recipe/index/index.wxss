/* pages/recipe/index/index.wxss */
.container {
  padding: 20rpx;
}

.recipe-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.actions {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.ai-button, .buy-button, .favorite-button {
  flex: 1;
  margin: 0 10rpx;
  padding: 15rpx 0;
  border-radius: 5rpx;
  text-align: center;
  color: #fff;
}

.ai-button {
  background-color: #4a90e2;
}

.buy-button {
  background-color: #50e3c2;
}

.favorite-button {
  background-color: #f5a623;
}