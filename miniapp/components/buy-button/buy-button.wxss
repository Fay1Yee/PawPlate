.buy-button {
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  border: none;
  margin: 20rpx 0;
}

.buy-button.primary {
  background-color: #ff9800;
  color: white;
}

.buy-button.secondary {
  background-color: #f5f5f5;
  color: #333;
}

.buy-text {
  display: block;
}