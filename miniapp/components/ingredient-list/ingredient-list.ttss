.ingredient-list {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.list-header {
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 30rpx;
  font-weight: bold;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-name {
  font-size: 28rpx;
}

.ingredient-amount {
  font-size: 28rpx;
  color: #666;
}