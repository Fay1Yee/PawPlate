
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: radial-gradient(120% 120% at 10% -10%, #FFFBF0 0%, #FFF070 44%, #C8FF4D 88%) no-repeat;
  color: #141414;
  font-family: 'Nunito', 'PingFang SC', 'HarmonyOS Sans', sans-serif;
  overflow: hidden;
}



/* 聊天容器 */
.chat-container {
  flex: 1;
  padding: 20px;
  padding-bottom: calc(180px + env(safe-area-inset-bottom));
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 滚动条样式 */
.chat-container::-webkit-scrollbar {
  width: 4px;
}

.chat-container::-webkit-scrollbar-track {
  background: transparent;
}

.chat-container::-webkit-scrollbar-thumb {
  background: rgba(58, 46, 22, 0.2);
  border-radius: 2px;
}

.chat-container::-webkit-scrollbar-thumb:hover {
  background: rgba(58, 46, 22, 0.3);
}

/* 卡通拟物卡片 */
.glass{
  position: relative;
  background: #FFFFFF;
  border: 1px solid #EFEFEF;
  border-radius: 16px;
  box-shadow: 0 6px 16px rgba(0,0,0,.12);
  overflow: hidden;
}

.glass::after {
  content: '';
  position: absolute;
  inset: 0;
  background-image: radial-gradient(#00000008 1px, transparent 1px);
  background-size: 6px 6px;
  pointer-events: none;
}

/* 消息项 */
.message-item {
  margin-bottom: 16px;
}

.message {
  max-width: 80%;
  padding: 12px 16px;
  border-radius: 24px;
  position: relative;
}

.user-message {
  background: linear-gradient(180deg, #FFE96B, #FFBE2E);
  color: #141414;
  margin-left: auto;
  border-bottom-right-radius: 6px;
  box-shadow: 0 8px 0 #E09B20, 0 12px 20px rgba(224,155,32,.2);
  font-weight: 600;
}

.ai-message {
  background: #FFFFFF;
  color: #141414;
  margin-right: auto;
  border-bottom-left-radius: 6px;
  border: 1px solid #EFEFEF;
  box-shadow: 0 6px 16px rgba(0,0,0,.12);
  font-weight: 600;
  position: relative;
  overflow: hidden;
}

.ai-message::after {
  content: '';
  position: absolute;
  inset: 0;
  background-image: radial-gradient(#00000008 1px, transparent 1px);
  background-size: 6px 6px;
  pointer-events: none;
  z-index: 0;
}

.ai-message .message-content {
  position: relative;
  z-index: 1;
}

.message-content {
  font-size: 16px;
  line-height: 24px;
  letter-spacing: 0.2px;
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
  hyphens: auto;
}

.message-time {
  font-size: 12px;
  opacity: 0.7;
  margin-top: 4px;
}

/* AI输入提示 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  animation: bounce-in 0.25s cubic-bezier(.2,.8,.2,1);
}

/* 卡通动效 */
@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-4px); }
  100% { transform: translateY(0); }
}

.float {
  animation: float 3s ease-in-out infinite;
}

@keyframes wiggle {
  0% { transform: rotate(0); }
  25% { transform: rotate(1.5deg); }
  75% { transform: rotate(-1.5deg); }
  100% { transform: rotate(0); }
}

.wiggle:hover {
  animation: wiggle .6s ease-in-out 1;
}

@keyframes bounce-in {
  0% { transform: scale(0.9); opacity: 0; }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); opacity: 1; }
}

.bounce-in {
  animation: bounce-in 0.25s cubic-bezier(.2,.8,.2,1);
}

.message-item {
  animation: bounce-in 0.25s cubic-bezier(.2,.8,.2,1);
}

.dots {
  display: flex;
  gap: 4px;
}

.dot {
  width: 6px;
  height: 6px;
  background: #999;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-10px);
    opacity: 1;
  }
}

/* 输入区域 - 修复位置和安全区域 */
.input-container {
  position: fixed;
  left: 12px;
  right: 12px;
  bottom: calc(16px + env(safe-area-inset-bottom));
  padding: 16px 20px;
  background: rgba(255, 255, 255, 0.95) !important;
  backdrop-filter: blur(18px);
  border-radius: 24px;
  z-index: 9999;
  box-shadow: 0 10px 28px rgba(58,46,22,0.14);
  border: 2px solid rgba(246, 198, 66, 0.3);
  min-height: 60px;
}

.input-wrapper {
  display: flex !important;
  align-items: center;
  background: rgba(255, 255, 255, 0.98) !important;
  border: 2px solid rgba(246, 198, 66, 0.4) !important;
  border-radius: 18px;
  padding: 12px 16px;
  margin-bottom: 12px;
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 12px rgba(58, 46, 22, 0.12);
  min-height: 48px;
  width: 100%;
  box-sizing: border-box;
}

.input-wrapper:focus-within {
  border-color: rgba(246, 198, 66, 0.8) !important;
  box-shadow: 0 4px 16px rgba(246, 198, 66, 0.25) !important;
  background: rgba(255, 255, 255, 1) !important;
}

.chat-input {
  flex: 1;
  border: none !important;
  background: transparent !important;
  padding: 8px 16px;
  font-size: 16px;
  line-height: 24px;
  letter-spacing: 0.2px;
  outline: none !important;
  resize: none;
  word-break: break-word;
  white-space: pre-wrap;
  color: #3A2E16 !important;
  min-height: 24px;
  width: 100%;
  box-sizing: border-box;
  font-family: var(--font-cartoon-body, 'DynaPuff', cursive);
  -webkit-appearance: none;
  appearance: none;
}

.chat-input:focus {
  outline: none !important;
  border: none !important;
}

.chat-input::placeholder {
  color: rgba(58, 46, 22, 0.5) !important;
  font-size: 16px;
}

.send-btn {
  padding: 10px 18px;
  border-radius: 18px;
  background: rgba(246, 198, 66, 0.3);
  color: #3A2E16;
  font-size: 14px;
  font-family: var(--font-cartoon-secondary, 'DynaPuff', cursive);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  gap: 6px;
  border: none;
  cursor: pointer;
  min-width: 80px;
  justify-content: center;
  font-weight: 500;
}

.send-btn.active {
  background: linear-gradient(180deg, #F6C642 0%, #E59A00 100%) !important;
  color: white !important;
  box-shadow: 0 2px 8px rgba(246, 198, 66, 0.3);
}

.send-btn:hover {
  background: rgba(246, 198, 66, 0.4);
}

.send-btn.active:hover {
  background: linear-gradient(180deg, #F6C642 0%, #E59A00 100%) !important;
}

/* 快捷回复 */
.quick-replies {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.quick-reply-btn {
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.7);
  color: #3A2E16;
  border-radius: 18px;
  font-size: 14px;
  border: none;
  transition: all 0.3s;
  backdrop-filter: blur(10px);
}

.quick-reply-btn:active {
  background: rgba(246, 198, 66, 0.25);
  transform: scale(0.95);
}

/* 完成按钮容器 - 修复位置和安全区域 */
.completion-container {
  position: fixed;
  left: 12px;
  right: 12px;
  bottom: calc(16px + env(safe-area-inset-bottom));
  padding: 16px 20px;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(18px);
  border-radius: 24px;
  z-index: 999;
  box-shadow: 0 10px 28px rgba(58,46,22,0.14);
}

.btn-primary {
  background: linear-gradient(180deg, #F6C642 0%, #E59A00 100%);
  color: white;
  padding: 15px 30px;
  border-radius: 24px;
  text-align: center;
  font-weight: bold;
  font-size: 16px;
  box-shadow: 0 10px 28px rgba(58,46,22,0.14);
  transition: all 0.3s;
}

.btn-primary:active {
  transform: translateY(2px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}