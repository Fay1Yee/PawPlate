
.shelf { margin-top: 12px; }
.title { font-size: 16px; font-weight: 700; margin-bottom: 8px; }
.row { white-space: nowrap; }
.card { display:inline-block; width: 140px; padding: 10px; margin-right: 10px;
  background: rgba(255,255,255,0.6); border-radius: 16px; }
.thumb { height: 70px; background: rgba(0,0,0,0.06); border-radius: 12px; }
.name { display:block; margin:8px 0; font-size: 12px; }
.btn { background: linear-gradient(180deg,#F6C642,#E59A00); color:#fff; border-radius: 14px; padding: 6px 10px; text-align:center; }
