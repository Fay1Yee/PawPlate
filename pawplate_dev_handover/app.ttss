
:root {
  --color-primary: #F6C642;
  --color-primary-deep: #E59A00;
  --color-text: #3A2E16;
  --color-text-secondary: #6B5B35;
  --color-glass: #FFF6E3;
  --radius-xl: 24px;
}
.page { background:#FFF9EB; padding:20px; color:var(--color-text); font-family: system-ui,'SF Pro Rounded','Nunito',sans-serif;}
.glass { background:var(--color-glass); backdrop-filter: blur(16px); border-radius: var(--radius-xl); box-shadow: 0 10px 28px rgba(58,46,22,0.14); }
.btn-primary { background: linear-gradient(180deg,#F6C642 0%,#E59A00 100%); color:#fff; border-radius:20px; padding:14px 18px; text-align:center; font-weight:700; }
.btn-secondary{ background: rgba(0,0,0,0.06); color:var(--color-text); border-radius:20px; padding:14px 18px; text-align:center; font-weight:700; }
.h1{font-size:24px;font-weight:700;} .h2{font-size:20px;font-weight:700;} .caption{font-size:12px;opacity:.8;}
