
<view class="page">
  <view class="glass" style="padding:16px;">
    <text class="h2">宠物档案</text>
    <view style="margin-top:10px;">{{profile.species}} · {{profile.breed}} · {{profile.age_months}}月 · {{profile.weight_kg}}kg</view>
    <view class="btn-secondary" style="margin-top:12px;width:160px;text-align:center;" bindtap="edit">编辑档案</view>
  </view>
  <view class="glass" style="padding:16px;margin-top:16px;">
    <text class="h2">我的收藏</text>
    <view wx:for="{{favorites}}" wx:key="id" style="margin-top:10px;">· {{item}}</view>
  </view>
</view>
